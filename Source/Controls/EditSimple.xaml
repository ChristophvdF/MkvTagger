<UserControl x:Class="MatroskaTagger.EditSimple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="root"
             mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Label x:Name="label" Grid.Column="0" Content="Description:" VerticalAlignment="Center"/>
    <TextBox x:Name="textBox" Grid.Column="1" MinWidth="30" MaxWidth="300" TextChanged="OnTextChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
  </Grid>
</UserControl>
