<UserControl x:Class="MkvTagger.Controls.EditSortWith"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="root"
             mc:Ignorable="d">
  <GroupBox x:Name="group" Header="Description" VerticalAlignment="Center">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
      <TextBox x:Name="textBox" MinWidth="30" MaxWidth="300" TextChanged="OnTextChanged" VerticalAlignment="Center" />
      <Label x:Name="labelSort" Content="Sort with:" VerticalAlignment="Center" />
      <TextBox x:Name="textBoxSort" MinWidth="30" MaxWidth="300" TextChanged="OnTextChanged" VerticalAlignment="Center" />
    </StackPanel>
  </GroupBox>
</UserControl>
