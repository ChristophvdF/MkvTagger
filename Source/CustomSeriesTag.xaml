<UserControl x:Class="MkvTagger.CustomSeriesTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonEdit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
             xmlns:controls="clr-namespace:MkvTagger.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="508" d:DesignWidth="1095">
  <UserControl.Resources>
    <ResourceDictionary Source="Common.Styles.xaml"/>
  </UserControl.Resources>
  <DockPanel>
    <DockPanel DockPanel.Dock="Top" Margin="5">
      <Label DockPanel.Dock="Left">FileTitle:</Label>
      <TextBox x:Name="txtFilename" IsReadOnly="True" IsReadOnlyCaretVisible="True" Text="Empty tag file."/>
    </DockPanel>
    <DockPanel x:Name="dockXml" DockPanel.Dock="Top" Margin="5" Visibility="Collapsed">
      <Label DockPanel.Dock="Left">XML-FileTitle:</Label>
      <TextBox x:Name="txtXmlFilename" IsReadOnly="True" IsReadOnlyCaretVisible="True" />
    </DockPanel>
    <DockPanel DockPanel.Dock="Top" LastChildFill="False" 
               HorizontalAlignment="Stretch" Width="Auto" 
               Background="#FFF2F2F2">
      <ToolBar x:Name="tbToolBar" DockPanel.Dock="Left" 
               Background="{x:Null}">
        <Button Click="refreshButton_OnClick" Content="Refresh" ToolTip="Reload tags from file" />
        <Button x:Name="saveButton" Content="Save" Click="SaveButton_OnClick" IsEnabled="False" ToolTip="Save" />
        <Button Click="mpTVSeries_OnClick" Content="MP-TVSeries"/>
        <Button Click="tvdb_OnClick" Content="TheTvDB.com"/>
        <!--<Button ToolTip="Delete">
                <Image Source="Delete.png"/>
              </Button>-->
      </ToolBar>
    </DockPanel>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <ScrollViewer Grid.Column="0">
        <StackPanel>
          <GroupBox Header="Recommended for unique identification:" Padding="5">
            <StackPanel>
              <controls:EditSimple x:Name="seriesTitle" Description="Series Title:" TextChanged="UpdatePreview"/>
              <controls:EditSimple x:Name="seriesIMDB" Description="Series IMDB-id:" TextChanged="UpdatePreview"/>
              <controls:EditSimple x:Name="seriesTVDB" Description="Series TVDB-id:" TextChanged="UpdatePreview"/>
              <controls:EditSimple x:Name="seasonIndex" Description="Season Index:" TextChanged="UpdatePreview"/>
              <controls:EditStringList x:Name="episodeIndexList" Description="Episode IndexList:" TextChanged="UpdatePreview" />
              <DockPanel>
                <Label DockPanel.Dock="Right" Style="{StaticResource infoLabel}" ToolTip="Date has to be in 'YYYY-MM-DD'-format." />
                <controls:EditSimple x:Name="episodeAired" Description="Episode First Aired:" TextChanged="UpdatePreview"/>
              </DockPanel>
            </StackPanel>
          </GroupBox>
          <GroupBox Header="Additional series infos" Padding="5">
            <StackPanel>
              <controls:EditSimple x:Name="seriesFirstAired" Description="First Aired:" TextChanged="UpdatePreview"/>
              <controls:EditMultiLine x:Name="seriesSummary" Description="Summary:" TextChanged="UpdatePreview"/>
              <controls:EditStringList x:Name="seriesGenre" Description="Genre:" TextChanged="UpdatePreview" />
              <controls:EditStringList x:Name="seriesActors" Description="Actors:" TextChanged="UpdatePreview" />
              <controls:EditSimple x:Name="Certification" Description="Certification:" TextChanged="UpdatePreview"/>
              <controls:EditSimple x:Name="Network" Description="Network:" TextChanged="UpdatePreview"/>
              <DockPanel>
                <Label DockPanel.Dock="Right" Style="{StaticResource infoLabel}" ToolTip="Comma separated list." />
                <controls:EditSimple x:Name="seriesKeywords" Description="Keywords:" TextChanged="UpdatePreview"/>
              </DockPanel>
            </StackPanel>
          </GroupBox>
          <GroupBox Header="Additional episode infos" Padding="5">
            <StackPanel>
              <controls:EditSimple x:Name="episodeTitle" Description="Title:" TextChanged="UpdatePreview"/>
              <controls:EditMultiLine x:Name="episodeSummary" Description="Summary:" TextChanged="UpdatePreview"/>
              <controls:EditSimple x:Name="episodeIMDB" Description="IMDB:" TextChanged="UpdatePreview"/>
              <controls:EditStringList x:Name="GuestStars" Description="Guest Stars:" TextChanged="UpdatePreview" />
              <controls:EditStringList x:Name="Directors" Description="Directors:" TextChanged="UpdatePreview" />
              <controls:EditStringList x:Name="Writers" Description="Writers:" TextChanged="UpdatePreview" />
              <DockPanel>
                <Label DockPanel.Dock="Right" Style="{StaticResource infoLabel}" ToolTip="Comma separated list." />
                <controls:EditSimple x:Name="episodeKeywords" Description="Keywords:" TextChanged="UpdatePreview"/>
              </DockPanel>
            </StackPanel>
          </GroupBox>
        </StackPanel>
      </ScrollViewer>
      <GroupBox Grid.Column="1" Header="Original XML">
        <avalonEdit:TextEditor Style="{StaticResource matroskaEditOld}" Name="textEditorOriginal" />
      </GroupBox>
      <GroupBox Grid.Column="2" Header="New XML">
        <avalonEdit:TextEditor Style="{StaticResource matroskaEdit}" Name="textEditorNew" />
      </GroupBox>
    </Grid>
  </DockPanel>
</UserControl>
