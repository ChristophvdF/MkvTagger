<Window x:Class="MkvTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MatroskaTagger" Height="350" Width="525"
        xmlns:mkvTagger="clr-namespace:MkvTagger" xmlns:views="clr-namespace:MkvTagger.Views">
  <Grid AllowDrop="True" Drop="FileDropHandler">
    <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <TabItem Header="Tips">
        <mkvTagger:Tips/>
      </TabItem>
      <TabItem Header="Settings">
        <views:SettingsView/>
      </TabItem>
      <TabItem Header="MP-TVSeries">
        <mkvTagger:MPTVSeries x:Name="mptvseries"/>
      </TabItem>
      <TabItem Header="MovingPicures">
        <Grid Background="#FFE5E5E5">
          <Label HorizontalAlignment="Center" VerticalAlignment="Center">Not implemented yet</Label>
        </Grid>
      </TabItem>
      <TabItem Header="Custom SeriesTag">
        <mkvTagger:CustomSeriesTag x:Name="customSeriesTag"/>
      </TabItem>
      <TabItem Header="Custom MovieTag">
        <mkvTagger:CustomMovieTag x:Name="customMovieTag"/>
      </TabItem>
      <TabItem Header="Custom MusicVideoTag">
        <mkvTagger:CustomMusicVideoTag x:Name="customMusicVideoTag"/>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
